generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
}

model Decisions {
  id         Int      @id @default(autoincrement())
  symbol     String
  timeFrame  String
  price      Float
  decision   String
  confidence Float
  reasoning  String   @db.Text
  model      String
  createdAt  DateTime @default(now())

  @@index([symbol, createdAt])
}
