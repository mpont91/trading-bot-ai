generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TradeAction {
  BUY
  SELL
  HOLD
}

model Decision {
  id         Int         @id @default(autoincrement())
  symbol     String
  timeFrame  String
  price      Float
  decision   TradeAction
  confidence Float
  reasoning  String      @db.Text
  model      String
  createdAt  DateTime    @default(now())

  @@index([symbol, createdAt])
}
