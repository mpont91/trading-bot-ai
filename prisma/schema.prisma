generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum AdviceAction {
  BUY
  SELL
  HOLD
}

enum OrderSide {
  BUY
  SELL
}

enum PositionStatus {
  OPEN
  CLOSED
}

model Evaluation {
  id         Int          @id @default(autoincrement())
  symbol     String
  timeFrame  String
  price      Decimal
  action     AdviceAction
  confidence Float
  reasoning  String       @db.Text
  model      String
  createdAt  DateTime     @default(now())

  @@index([symbol, createdAt])
}

model Order {
  id              Int       @id @default(autoincrement())
  exchangeOrderId String
  symbol          String
  side            OrderSide
  quantity        Decimal
  price           Decimal
  cost            Decimal
  fees            Decimal
  createdAt       DateTime  @default(now())
  positionEntry   Position? @relation("PositionEntry")
  positionExit    Position? @relation("PositionExit")

  @@index([symbol, side])
  @@index([symbol])
  @@index([side])
}

model Position {
  id          Int            @id @default(autoincrement())
  symbol      String
  status      PositionStatus
  entryPrice  Decimal
  quantity    Decimal
  entryTime   DateTime       @default(now())
  buyOrderId  Int            @unique
  buyOrder    Order          @relation("PositionEntry", fields: [buyOrderId], references: [id])
  exitPrice   Decimal?
  exitTime    DateTime?
  sellOrderId Int?           @unique
  sellOrder   Order?         @relation("PositionExit", fields: [sellOrderId], references: [id])
  pnl         Decimal?
  pnlPercent  Decimal?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}
