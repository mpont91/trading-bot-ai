generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum AdviceAction {
  BUY
  SELL
  HOLD
}

enum OrderSide {
  BUY
  SELL
}

model Evaluation {
  id         Int          @id @default(autoincrement())
  symbol     String
  timeFrame  String
  price      Decimal
  action     AdviceAction
  confidence Float
  reasoning  String       @db.Text
  model      String
  createdAt  DateTime     @default(now())

  @@index([symbol, createdAt])
}

model Order {
  id              Int       @id @default(autoincrement())
  exchangeOrderId String
  symbol          String
  side            OrderSide
  quantity        Decimal
  price           Decimal
  cost            Decimal
  fees            Decimal
  createdAt       DateTime  @default(now())

  @@index([symbol, side])
  @@index([symbol])
  @@index([side])
}
